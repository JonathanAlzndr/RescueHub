<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RescueHub" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/bubblegum_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blush_pink</item>
        <item name="colorSecondaryVariant">@color/bubblegum_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RescueHub.SplashScreen" parent = "Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/emergency_64</item>
        <item name="postSplashScreenTheme">@style/Theme.RescueHub</item>
    </style>
</resources>